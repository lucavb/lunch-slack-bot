{
    "name": "lunch-slack-bot",
    "version": "1.0.0",
    "description": "Serverless Slack bot for outdoor lunch meetup reminders based on weather conditions",
    "main": "dist/index.js",
    "scripts": {
        "build": "npm run clean && npm run build:weather-check",
        "build:weather-check": "esbuild src/handlers/weather-check.ts --bundle --platform=node --target=node22 --outfile=dist/weather-check.js --external:aws-sdk --sourcemap",
        "build:dev": "npm run build -- --watch",
        "deploy": "cd terraform && terraform apply",
        "plan": "cd terraform && terraform plan",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "dev": "npm run build:dev",
        "clean": "rm -rf dist",
        "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
        "format:terraform": "terraform fmt terraform/"
    },
    "keywords": [
        "slack",
        "bot",
        "weather",
        "lunch",
        "serverless",
        "aws",
        "lambda"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@aws-sdk/client-dynamodb": "3.840.0",
        "@aws-sdk/util-dynamodb": "3.840.0",
        "date-fns": "4.1.0",
        "zod": "3.25.76"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.129",
        "@types/node": "24.0.12",
        "@vitest/coverage-v8": "3.2.4",
        "@vitest/ui": "3.2.4",
        "esbuild": "0.25.6",
        "prettier": "3.6.2",
        "typescript": "^5.3.3",
        "vitest": "3.2.4"
    },
    "engines": {
        "node": ">=22.0.0"
    }
}
